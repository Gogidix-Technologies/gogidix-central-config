# Central Configuration Domain Environment Template
# Copy this file to .env and fill in your values

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_USERNAME=admin
EUREKA_PASSWORD=admin123

# Config Server
CONFIG_SERVER_URL=http://localhost:8888
CONFIG_SERVER_USERNAME=admin
CONFIG_SERVER_PASSWORD=configpass

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/central_config
DATABASE_USERNAME=config_user
DATABASE_PASSWORD=your_password_here

# Secrets Management
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token_here
ENCRYPTION_KEY=your_encryption_key_here

# Environment Configuration
ENVIRONMENT=development
REGION=us-east-1
DEPLOYMENT_ZONE=zone-1

# Kubernetes Configuration
K8S_NAMESPACE=central-configuration
K8S_CLUSTER=default

# Infrastructure as Code
TERRAFORM_BACKEND=s3
TERRAFORM_STATE_BUCKET=your-terraform-state-bucket

# CI/CD Configuration
GITHUB_TOKEN=your_github_token_here
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Monitoring and Logging
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
ELASTICSEARCH_URL=http://localhost:9200

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Application Ports
CONFIG_SERVER_PORT=8888
SECRETS_MANAGEMENT_PORT=8889
ENVIRONMENT_CONFIG_PORT=8890
REGIONAL_DEPLOYMENT_PORT=8891
DATABASE_MIGRATIONS_PORT=8892
INFRASTRUCTURE_AS_CODE_PORT=8893
CI_CD_TEMPLATES_PORT=8894
DEPLOYMENT_SCRIPTS_PORT=8895
KUBERNETES_MANIFESTS_PORT=8896
DISASTER_RECOVERY_PORT=8897